const readline = require('readline');


function gerarNumeroAleatorio(min, max) {
  return Math.floor(Math.random() * (max - min + 1)) + min;
}


function jogoDeAdivinhacao() {
  const numeroSecreto = gerarNumeroAleatorio(1, 100); 
  let tentativa;
  let numeroTentativas = 0;

  const rl = readline.createInterface({
    input: process.stdin,
    output: process.stdout
  });

  const fazerTentativa = () => {
    rl.question("Tente adivinhar o número (entre 1 e 100): ", (resposta) => {
      tentativa = parseInt(resposta);
      numeroTentativas++;

      if (tentativa === numeroSecreto) {
        console.log(`Parabéns! Você acertou o número ${numeroSecreto} em ${numeroTentativas} tentativas.`);
        rl.close();
      } else if (tentativa < numeroSecreto) {
        console.log("Tente um número maior.");
        fazerTentativa();
      } else {
        console.log("Tente um número menor.");
        fazerTentativa();
      }
    });
  };

  fazerTentativa();
}


jogoDeAdivinhacao();
